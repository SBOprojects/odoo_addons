<t t-name="point_of_sale.OptionPopup">
    <div class="popup">
        <div class="popup-header">
            <h3><t t-esc="props.title" /></h3>
        </div>
        <div class="popup-body">
            <ul>
                <t t-foreach="props.options" t-as="option" t-key="option.value">
                    <li>
                        <input
                            type="radio"
                            t-att-name="option"
                            t-att-value="option.value"
                            t-att-checked="option.value === selectedOption.value"
                            t-on-change="() => selectedOption.value = option.value"
                        />
                        <label><t t-esc="option.label" /></label>
                    </li>
                </t>
            </ul>
        </div>
        <div class="popup-footer">
            <button t-on-click="confirmSelection" class="btn btn-primary">
                <t t-esc="_t('Confirm')" />
            </button>
            <button t-on-click="cancelPopup" class="btn btn-secondary">
                <t t-esc="_t('Cancel')" />
            </button>
        </div>
    </div>
</t>
